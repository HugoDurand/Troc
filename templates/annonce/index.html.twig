{% extends 'base.html.twig' %}

{% block title %}Annonces{% endblock %}

{% block body %}

    <div class="row">

        <div class="col-md-3">
            {% for categorie in categories %}
                {{ categorie.libelle }}<br/>
            {% endfor %}

        </div>
        <div class="col-md-9">
            {% for annonce in annonces %}
                <br/> <a href="{{ path('show_annonce', { 'id': annonce.id }) }}">
                {{ annonce.id }}
                {{ annonce.libelle }}
                {{ annonce.photo }}
                {{ annonce.localisation }}
            </a><br/>
            {% endfor %}
        </div>
    </div>



{% endblock %}
