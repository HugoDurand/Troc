{% extends 'base.html.twig' %}

{% block title %}Annonces{% endblock %}

{% block body %}
<section class="annonces_background">

    <div class="annonces_full">
        <div class="col-md-3">
            {% for categorie in categories %}
            <ul>
                <li>
                     <a href="{{ path('annonce', { 'type': 'categorie', 'data': categorie.id }) }}">{{ categorie.libelle }}</a>
                </li>
            </ul>
            {% endfor %}

        </div>
        <div class="col-md-9">
            <div class="serchDiv">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                {{ form_end(form) }}
            </div>

            <div class="articles_container">
                {% for annonce in annonces %}
                <a  class="annonce_card" href="{{ path('show_annonce', { 'id': annonce.id }) }}">
                    <div>
                        <img src="{{ asset('annonce_picture/'~annonce.photo) }}" alt="">
                        <div class="article_content">
                            <h3>{{ annonce.libelle }}</h3>
                            <h4>{{ annonce.localisation }}</h4>
                        </div>
                    </div>
                </a>
                {% endfor %}
            </div>

        </div>
    </div>
</section>


{% endblock %}
