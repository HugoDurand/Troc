{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}


    <div class="row">
        <div>
            {{ form_start(form) }}
            {{ form_widget(form) }}
            {{ form_end(form) }}
        </div>
    </div>
<hr/>
    <div class="row">
        <a href="{{ path('annonce')}}">See All</a>
    </div>
<hr/>
    <div class="row">
        <div>
            {% for categorie in categories %}

                <a href="{{ path('annonce', { 'type': 'categorie', 'data': categorie.id }) }}">{{ categorie.libelle }}</a>

            {% endfor %}
        </div>
    </div>

{% endblock %}
